@model EmployeeDetailViewModel

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";

    string[] Gender = { "Male", "Female" };
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Employee List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Employee Details</li>
                </ol>
            </nav><br />
            <div class="wrap d-flex justify-content-start justify-content-sm-center flex-wrap">
                <img class="rounded-circle shadow-lg" style="width:300px; height:350px" src="@Url.Content(Model.ImageUrl)" alt="" />
                <div class="wrap align-items-center ml-5">
                    <p class="font-weight-bold text-primary" style="font-size:20px">@Model.LASRRAID</p>
                    <p class="font-weight-bold text-success" style="font-size:20px">@Model.Surname</p>
                    <p class="font-weight-bold text-success" style="font-size:20px">@Model.FirstName</p>
                    <p class="font-weight-bold text-success" style="font-size:20px">@Model.MiddleName</p>
                    <p class="font-weight-normal"> Contact Phone: @Model.ContactPhone</p>
                    <p class="font-weight-normal"> Gender: @Model.Gender</p>
                    <p class="font-weight-normal">Date Of Birth: @Model.DOB.ToString("dd/MM/yyyy")</p>
                    <br />
                    <p class="font-weight-bold"> Employment Detail</p>
                    <hr style="background-color:crimson" />
                    <p class="font-weight-normal">Employment Type: @Model.EmploymentTypeName</p>
                    <p class="font-weight-normal">Oracle No: @Model.EmployeeNo</p>
                    <p class="font-weight-normal">MDA: <a href="#">@Model.Ministry</a></p>
                    <p class="font-weight-normal">Designation: @Model.Designation</p>
                    <p class="font-weight-normal"> Email: <a href="#">@Model.Email</a></p>
                    <br />
                    <p class="font-weight-bold"> Next of Kin Information</p>
                    <hr style="background-color:crimson" />
                    <p class="font-weight-normal">Full Name: @Model.NextofkinFullName</p>
                    <p class="font-weight-normal"> Contact Phone: @Model.NextofKinPhone</p>
                    <p class="font-weight-normal">Relationship: @Model.NextOfkinrelationship</p>
                    @*<p class="font-weight-normal"><i class="fas fa-envelope" style="margin-right:0.6em; color:cornflowerblue"></i> <a href="mailto:@Model.Email?subject=Payslip&body=Attached within is your paylip.">Send Payslip</a></p>*@
                    <br />

                    <p class="font-weight-bold"> Address</p>
                    <hr style="background-color:crimson" />
                    <p class="font-weight-normal"> @Model.Address</p>
                    @*<p class="font-weight-normal"> @Model.City</p>
        <p class="font-weight-normal"> @Model.Postcode</p>*@
                    <br />
                    <br />
                </div>
            </div>

        </div>
    </div>
