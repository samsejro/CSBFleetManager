@model RegistrationModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";


}

<div class="col-md-12 grid-margin stretch-card">

    <div class="card">
        <div class="card-body">
            <form method="post" enctype="multipart/form-data" asp-action="Register" id="UserRegistration">
                <h3>Create New User</h3>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="LastName" style="text-align:center"></label>

                    </div>
                    <div class="form-group col-md-4">
                        <input asp-for="LastName" class="form-control" id="txtsurname" placeholder="Enter SurName.." style="margin:0" />
                        <span asp-validation-for="LastName" class="text-danger"></span>

                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="FirstName" style="text-align:right"></label>

                    </div>
                    <div class="form-group col-md-4">
                        <input asp-for="FirstName" class="form-control" id="txtFirstnam" placeholder="Enter SurName.." />
                        <span asp-validation-for="FirstName" class="text-danger"></span>

                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="form-group col-md-4">
                        <input asp-for="Email" class="form-control" id="txtemail" placeholder="Enter Email.." />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="MDAId" style="text-align:right"></label>
                    </div>
                    <div class="form-group col-md-4">
                        <select asp-for="MDAId" class="form-control" asp-items="@ViewBag.MDAList">
                            <option disabled selected>-- Select MDA --</option>
                        </select>
                        @*@Html.DropDownListFor(x =>Model., new SelectList(Model.MDAList, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })*@
                        <span asp-validation-for="MDAId" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="Password">Default Password</label>

                    </div>
                    <div class="form-group col-md-4">
                        <input asp-for="Password" class="form-control" id="txtPassword" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="ConfirmPassword" style="text-align:right">Confirm Default</label>

                    </div>
                    <div class="form-group col-md-4">
                        <input asp-for="ConfirmPassword" class="form-control" id="txtConfirmPassword" type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-6" style="text-align:right">
                        <button type="submit" class="btn btn-rounded btn-primary"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
                    </div>
                    <div class="form-group col-md-6" style="text-align:left">
                        <a asp-action="IndexManager" asp-controller="Home" class="btn btn-rounded btn-success "><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Cancel</a>
                    </div>

                </div>
            </form>

        </div>

    </div>


</div>